# 环境配置
# 复制为 .env 并填入实际值

# 智谱 GLM API Key
ZHIPU_API_KEY=your_api_key_here

# LLM 模型选择 (glm-4 / glm-4-air / glm-4-flash)
LLM_MODEL=glm-4

# 浏览器配置
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 证据存储
EVIDENCE_DIR=./evidence
STATE_DIR=./states
CONFIG_DIR=./config

# 策略配置
POLICY_FILE=./config/policies.json

# 最大并行任务
MAX_CONCURRENT_TASKS=3

# 超时配置
DEFAULT_TIMEOUT=30
BROWSER_NAVIGATION_TIMEOUT=30000
LLM_API_TIMEOUT=60
